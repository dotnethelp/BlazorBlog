@page "/"

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('assetes/img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

@if (Posts != null)
{


    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @foreach (var post in Posts)
                {
                    <div class="post-preview">
                        <a href="@post.Url">
                            <h2 class="post-title">
                                @post.Tilte
                            </h2>
                            <h3 class="post-subtitle">
                                @post.Description
                            </h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#">Ali</a>
                            on @post.PublishTime
                        </p>
                    </div>
                    <hr>
                }

                <!-- Pager -->
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                </div>
            </div>
        </div>
    </div>
}
