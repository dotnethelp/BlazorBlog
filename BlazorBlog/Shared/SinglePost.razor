
<!-- Page Header -->
<header class="masthead" style="background-image: url('assetes/img/@HeaderImage')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Header1</h1>
                    <h2 class="subheading">@Header2</h2>
                    <span class="meta">
                        Posted by
                        <a href="#">Ali</a>
                        on @PublishTime
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Content
            </div>
        </div>
    </div>
</article>


